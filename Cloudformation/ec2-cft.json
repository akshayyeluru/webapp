{
	"AWSTemplateFormatVersion": "2010-09-09",
	"Description": "TTND AWS CloudFormation template to launch first instance",
	"Parameters": {
		"KeyName": {
			"Type": "String",
			"Description": "EC2 Key Pair for SSH Access",
			"Default": "webAppFidelity",
			"MinLength": "1",
			"MaxLength": "64",
			"AllowedPattern": "[-_ a-zA-Z0-9]*",
			"ConstraintDescription": "can contain only alphanumeric characters, spaces, dashes and underscores."
		},
		"SubnetId": {
			"Description": "Instance1 EC2 instance type",
			"Type": "String",
			"Default": "subnet-8e6b20a4"
		},
		"InstanceType": {
			"Description": "Instance1 EC2 instance type",
			"Type": "String",
			"Default": "t2.micro",
			"AllowedValues": [
				"t2.micro",
				"m1.small",
				"m1.medium",
				"m1.large",
				"m1.xlarge",
				"m2.xlarge",
				"m2.2xlarge",
				"m2.4xlarge",
				"m3.medium",
				"m3.xlarge",
				"c4.xlarge",
				"c4.4xlarge",
				"m3.2xlarge",
				"c1.medium",
				"c1.xlarge",
				"cc1.4xlarge",
				"c4.large",
				"cc2.8xlarge",
				"cg1.4xlarge"
			],
			"ConstraintDescription": "must be a valid EC2 instance type."
		}
	},
	"Resources": {
		"InstanceSecurityGroup": {
			"Type": "AWS::EC2::SecurityGroup",
			"Properties": {
				"GroupName": "Demo-App-sg",
				"GroupDescription": "Enable HTTP access",
				"SecurityGroupIngress": [
					{
						"IpProtocol": "tcp",
						"FromPort": "22",
						"ToPort": "22",
						"CidrIp": "0.0.0.0/0"
					},
					{
						"IpProtocol": "tcp",
						"FromPort": "80",
						"ToPort": "80",
						"CidrIp": "0.0.0.0/0"
					}
				],

				"Tags": [
					{
						"Key": "Name",
						"Value": "Demo-App-sg"
					}
				],
				"VpcId": "vpc-0c5ff26b"
			}
		},
		"Instance": {
			"Type": "AWS::EC2::Instance",
			"Properties": {
				"KeyName": {
					"Ref": "KeyName"
				},
				"InstanceType": {
					"Ref": "InstanceType"
				},
				"ImageId": "ami-cfe4b2b0",
				"SubnetId": {
					"Ref": "SubnetId"
				},
				"SecurityGroupIds": [
					{
						"Ref": "InstanceSecurityGroup"
					}
				],
				"UserData"       : { "Fn::Base64" : { "Fn::Join" : ["", [
					"echo 'nameserver 8.8.8.8'>> /etc/resolv.conf"
			   ]]}},
				"Tags": [
					{
						"Key": "Name",
						"Value": "DemoApp-Server"
					}
				]
			}
		},
		"IPAssoc": {
			"Type": "AWS::EC2::EIPAssociation",
			"Properties": {
				"AllocationId": "eipalloc-3dda3436",
				"InstanceId": {
					"Ref": "Instance"
				}
			}
		}
	},
	"Outputs": {
		"InstanceId": {
			"Description": "InstanceId of the newly created Mysql instance",
			"Value": {
				"Ref": "Instance"
			}
		},
		"PublicIp": {
			"Value": {
				"Fn::GetAtt": ["Instance","PublicIp"]
			}
		}
	}
}